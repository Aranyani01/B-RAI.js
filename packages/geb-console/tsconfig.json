{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "sourceMap": false,
        "listEmittedFiles": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    }
}
